{% macro getPath(album, page) %}
{% spaceless %}
    #albums/{{ album }}/page/{{ page }}
    {#{{ dump(app.request.query.all|merge({'page': page})) }}#}
{% endspaceless %}
{% endmacro %}

{% if lastPage > 1 %}

    {# the number of first and last pages to be displayed #}
    {% set extremePagesLimit = 3 %}

    {# the number of pages that are displayed around the active page #}
    {% set nearbyPagesLimit = 2 %}

    {#<div class="pagination pagination-centered">#}
    <div>
        <ul class="pagination pagination-sm">
            {% if currentPage > 1 %}
                <li><a href="{{ _self.getPath(album, currentPage-1) }}">&larr;</a></li>

                {% for i in range(1, extremePagesLimit) if ( i < currentPage - nearbyPagesLimit ) %}
                    <li><a href="{{ _self.getPath(album, i) }}">{{ i }}</a></li>
                {% endfor %}

                {% if extremePagesLimit + 1 < currentPage - nearbyPagesLimit %}
                    <li class="disabled"><a href="#">...</a></li>
                {% endif %}

                {% for i in range(currentPage-nearbyPagesLimit, currentPage-1) if ( i > 0 ) %}
                    <li><a href="{{ _self.getPath(album, i) }}">{{ i }}</a></li>
                {% endfor %}
            {% else %}
                <li class="disabled"><a href="{{ _self.getPath(album, 1) }}">&larr;</a></li>
            {% endif %}

            <li class="active"><a href="#">{{ currentPage }}</a></li>

            {% if currentPage < lastPage %}
                {% for i in range(currentPage+1, currentPage + nearbyPagesLimit) if ( i <= lastPage ) %}
                    <li><a href="{{ _self.getPath(album, i) }}">{{ i }}</a></li>
                {% endfor %}

                {% if  (lastPage - extremePagesLimit) > (currentPage + nearbyPagesLimit) %}
                    <li class="disabled"><a href="#">...</a></li>
                {% endif %}

                {% for i in range(lastPage - extremePagesLimit+1, lastPage) if ( i > currentPage + nearbyPagesLimit ) %}
                    <li><a href="{{ _self.getPath(album, i) }}">{{ i }}</a></li>
                {% endfor %}

                <li><a href="{{ _self.getPath(album, currentPage+1) }}">&rarr;</a></li>
            {% else %}
                <li class="disabled"><a href="{{ _self.getPath(album, currentPage) }}">&rarr;</a></li>
            {% endif %}

        </ul>
    </div>
{% endif %}